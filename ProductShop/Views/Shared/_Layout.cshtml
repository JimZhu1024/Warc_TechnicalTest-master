<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="/Styles/Css/styles.css">
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header" style="float:left">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar">aaa</span>
                    <span class="icon-bar">bbb</span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink(Resources.ProductResource.ProductShop, "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse" style="float:left">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink(Resources.ProductResource.Home, "Index", "Home")</li>
                </ul>
            </div>

            <div class="navbar-collapse collapse" style="float:right">
                <ul class="nav navbar-nav">
                    @if (System.Threading.Thread.CurrentThread.CurrentUICulture.TwoLetterISOLanguageName.Contains("en"))
                    {
                        <li> <a href="@Request.Url.AbsolutePath?lang=zh-CN">@Resources.ProductResource.Chinese</a></li>
                    }
                    else { 
                        <li> <a href="@Request.Url.AbsolutePath?lang=en-us">@Resources.ProductResource.English</a></li>
                    }
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year @Resources.ProductResource.ProductShop</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
