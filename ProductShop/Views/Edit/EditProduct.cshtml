@model ProductShop.Models.EditProductViewModel
@{
    ViewBag.Title = Resources.ProductResource.Edit;
}

    <h1>@Resources.ProductResource.EditProduct</h1>

@using (Html.BeginForm("SaveProduct", "Edit", FormMethod.Post))
{
    <div class="row form-group">
        <div class="col-md-4">
            @Html.LabelFor(m => m.Id)
        </div>
        <div class="col-md-8">
            @Html.TextBoxFor(m => m.Id, new { @readonly = "readonly", @class = "form-control" })
        </div>
    </div>
    <div class="row form-group">
        <div class="col-md-4">
            @Html.LabelFor(m => m.Title)
        </div>
        <div class="col-md-8">
            @Html.TextBoxFor(m => m.Title, new { @class = "form-control" })
        </div>
    </div>
    <div class="row form-group">
        <div class="col-md-4">
            @Html.LabelFor(m => m.ImagePath)
        </div>
        <div class="col-md-8">
            @Html.TextBoxFor(m => m.ImagePath, new { @class = "form-control" })
        </div>
    </div>
    <div class="row form-group">
        <div class="col-md-4">
            @Html.LabelFor(m => m.Price)
        </div>
        <div class="col-md-8">
            @Html.TextBoxFor(m => m.Price, new { @class = "form-control" })
        </div>
    </div>
    <div class="row form-group">
        <div class="col-md-4">
            @Html.LabelFor(m => m.Description)
        </div>
        <div class="col-md-8">
            @Html.TextBoxFor(m => m.Description, new { @class = "form-control" })
        </div>
    </div>


    <div class="row form-group">
        <input type="submit" name="name" value="@Resources.ProductResource.Save" />
    </div>

}

